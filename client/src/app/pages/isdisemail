import { isDisposableEmail } from '../utils/emailUtils';
import axios from 'axios';
import { useState } from 'react';

export default function MailingListForm() {
  const [email, setEmail] = useState('');
  const [message, setMessage] = useState('');

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    if (isDisposableEmail(email)) {
      setMessage('Disposable email addresses are not allowed.');
      return;
    }

    try {
      await axios.post(`${process.env.NEXT_PUBLIC_API_URL}/subscribe`, { email });
      setMessage('Thanks for joining! Please check your inbox to confirm.');
      setEmail('');
    } catch (error: any) {
      setMessage(error?.response?.data?.message || 'Something went wrong.');
    }
  };

  return (
    <form onSubmit={handleSubmit} className="space-y-4">
      <input
        type="email"
        placeholder="Your email"
        value={email}
        onChange={(e) => setEmail(e.target.value)}
        className="w-full p-2 border rounded"
        required
      />
      <button type="submit" className="w-full bg-green-600 text-white p-2 rounded">
        Join Mailing List
      </button>
      {message && <p className="text-sm text-center text-red-600">{message}</p>}
    </form>
  );
}
